{
  "name": "@no-ui/core",
  "version": "0.0.1-alpha.1",
  "description": "UI components for react with no dependency.",
  "main": "dist/cjs/index.cjs.js",
  "module": "dist/esm/index.esm.js",
  "sideEffects": false,
  "types": "dist/types",
  "author": "zmzhoi <zmzhoi@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/zmzhoi/no-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zmzhoi/no-ui.git"
  },
  "bugs": {
    "url": "https://github.com/zmzhoi/no-ui/issues"
  },
  "scripts": {
    "format": "prettier --check \"**/*.(ts|tsx|js|jsx|json|md)\" --ignore-path ../../.prettierignore",
    "format:fix": "prettier --write \"**/*.(ts|tsx|js|jsx|json|md)\" --ignore-path ../../.prettierignore",
    "lint": "eslint src --ext .ts,.tsx",
    "prebuild": "npm run format && npm run lint",
    "build": "tsc && rollup -c",
    "dev": "rollup -cw",
    "test": "jest"
  },
  "peerDependencies": {
    "react": "^17 | ^18",
    "react-dom": "^17 | ^18"
  },
  "dependencies": {
    "@no-ui/hooks": "^0.0.1-alpha.1",
    "@no-ui/popper": "^0.0.1-alpha.1",
    "@no-ui/portal": "^0.0.1-alpha.1",
    "@no-ui/skeleton": "^0.0.1-alpha.1",
    "@no-ui/tooltip": "^0.0.1-alpha.1",
    "@no-ui/utils": "^0.0.1-alpha.1"
  }
}
