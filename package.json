{
  "name": "no-ui",
  "private": true,
  "description": "UI components for react with no dependency.",
  "main": "index.js",
  "author": "zmzhoi",
  "license": "MIT",
  "homepage": "https://github.com/zmzhoi/no-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zmzhoi/no-ui.git"
  },
  "bugs": {
    "url": "https://github.com/zmzhoi/no-ui/issues"
  },
  "scripts": {
    "dev": "npm start -w zmzhoi-cra && npm run dev -w @no-ui/core",
    "create-pkg:component": "plop",
    "test": "jest --watch",
    "build": "npm run build --workspaces --if-present",
    "format": "prettier --check \"**/*.(ts|tsx|js|jsx|json|md)\"",
    "format:fix": "prettier --write \"**/*.(ts|tsx|js|jsx|json|md)\"",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.2",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-eslint": "^9.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@zmzhoi/babel-preset-react": "^1.0.0",
    "@zmzhoi/eslint-config-react": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "node-sass": "^8.0.0",
    "plop": "^3.1.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.2.5",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "4.8.4"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
